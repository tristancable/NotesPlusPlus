@page "/"
@using Notes__.Utilities
@inject FolderService FolderService

<h3>Folders</h3>

<!-- Display the folders dynamically from FolderService -->
<div>
    <ul>
        @foreach (var folderName in folders)
        {
            <li>
                <a href="@($"/folder/{folderName}")">@folderName</a>
            </li>
        }
    </ul>
    <button @onclick="CreateFolder">Create New Folder</button>
</div>

@code {
    private List<string> folders = new();

    // Load folders from FolderService
    protected override void OnInitialized()
    {
        folders = FolderService.GetFolders(); // Get folder names as strings
    }

    private void CreateFolder()
    {
        FolderService.CreateFolder("NewFolder"); // Replace with actual folder creation logic
        folders = FolderService.GetFolders(); // Reload folders after creating a new one
    }
}
